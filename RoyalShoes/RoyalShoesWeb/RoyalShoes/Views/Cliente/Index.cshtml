@using RoyalShoes.Models.CRUD;

@model List<ClienteModels>

<h1> LOL </h1>
<form class="align-content-center">
    <button class="btn btn-primary" asp-controller="Cliente" asp-action="Registrar"> Registrar usuario </button>
<table class="table">
    <thead>
        <tr>
            <th>
                Documento
            </th>
            <th>
                Nombre
            </th>
            <th>
                Direccion
            </th>
            <th>
                Telefono
            </th>
            <th>
                Correo
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(c => cliente.Documento)
                </td>
                <td>
                    @Html.DisplayFor(c => cliente.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(c => cliente.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(c => cliente.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(c => cliente.Correo)
                </td>
                <td>
                    <button class="btn btn-secondary" asp-controller="Cliente" asp-action="Editar"> Editar usuario </button>
                </td>
            </tr>
        }
    </tbody>
</table>
</form>